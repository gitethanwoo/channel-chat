{
  "name": "channel-chat",
  "version": "0.1.0",
  "description": "CLI tool to download, transcribe, embed, and semantically search YouTube channel content",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "channel-chat": "./dist/cli.js",
    "channel-chat-mcp": "./bin/channel-chat-mcp"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "mcp": "node dist/mcp-server.js",
    "mcp:stdio": "node dist/mcp-server.js --stdio",
    "test": "node --test dist/**/*.test.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@elevenlabs/elevenlabs-js": "^2.33.0",
