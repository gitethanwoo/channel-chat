    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.0.0",
    "dotenv": "^16.4.7",
    "gpt-tokenizer": "^2.8.1",
    "ora": "^8.1.1",
    "sqlite-vec": "^0.1.6",
    "youtubei.js": "^13.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
